# 디스코드 웹훅 URL
# 디스코드 채널 설정 > 연동 > 웹후크 > 새 웹후크 만들기
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# 체크 간격 (초 단위, 기본값: 300 = 5분)
CHECK_INTERVAL=300

# 거래량 배수 (기본값: 5.0 = 5배)
VOLUME_MULTIPLIER=5.0

# SMA 기간 (기본값: 20)
SMA_PERIOD=20

# 캔들 기간 (기본값: 5m)
# 지원 형식: 1m, 3m, 5m, 15m, 30m, 1h, 4h, 1d 등
# 빗썸 API가 지원하는 형식을 확인하여 설정하세요
CANDLE_INTERVAL=5m

# 단일 실행 모드 (true: 한 번만 실행, false: 지속 실행)
RUN_ONCE=false

# 로그 파일 경로 (기본값: bithumb_monitor.log)
# 상대 경로 또는 절대 경로 사용 가능
# 예: logs/bithumb_monitor.log, /var/log/bithumb_monitor.log
LOG_FILE=bithumb_monitor.log

# API 요청 타임아웃 (초 단위, 기본값: 10초)
API_TIMEOUT=10

# 웹훅 요청 타임아웃 (초 단위, 기본값: 10초)
WEBHOOK_TIMEOUT=10

# API 호출 간 딜레이 (초 단위, 기본값: 0.1초)
# API 호출 제한을 피하기 위한 대기 시간
API_DELAY=0.1

# 알림 리셋 주기 (시간 단위, 기본값: 비활성화)
# 설정된 시간이 지나면 이미 알림을 보낸 종목 목록을 리셋합니다
# 메모리 누수를 방지하기 위한 설정입니다
# 예: 24 (24시간마다 리셋), 빈 값이면 리셋하지 않음
ALERT_RESET_HOURS=

